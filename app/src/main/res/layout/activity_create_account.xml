<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#F8E6BA"
    android:padding="20dp" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Crear una cuenta"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp" />



    <EditText
        android:id="@+id/createAcc_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="16sp" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="3px"
        android:background="@color/white" />

    <EditText
        android:id="@+id/createAcc_lastName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:hint="Apellido"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="16sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="3px"
        android:background="@color/white" />

    <EditText
        android:id="@+id/createAcc_brithday"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/calendar"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:hint="Fecha de nacimiento (dd/mm/aaaa)"
        android:inputType="date"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="16sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="3px"
        android:background="@color/white" />

    <EditText
        android:id="@+id/createAcc_mail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/email"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:hint="Correo"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="16sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="3px"
        android:background="@color/white" />

    <EditText
        android:id="@+id/createAcc_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/padlock"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="16sp" />


    <View
        android:layout_width="fill_parent"
        android:layout_height="3px"
        android:background="@color/white" />

    <EditText
        android:id="@+id/confirmPassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/key"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:hint="Repetir contraseña"
        android:inputType="textPassword"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="16sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="3px"
        android:background="@color/white" />


    <Button
        android:id="@+id/crateAcc_registerBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/white"
        android:onClick="registro"
        android:padding="3dp"
        android:text="Crear cuenta"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/crateAcc_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#00000000"
        android:onClick="back"
        android:text="¿Ya tiene una cuenta? Acceder."
        android:textAllCaps="false"
        android:textColor="#0808B1"
        android:textStyle="bold" />

</LinearLayout>
