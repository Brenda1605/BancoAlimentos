<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/tvTitleSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â¿Desea agregar este producto al carrito?"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center" />

    <Button
        android:id="@+id/btnConfirmSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmar"
        android:layout_below="@id/tvTitleSelect"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#30DA12"/>

    <Button
        android:id="@+id/btnCancelSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvTitleSelect"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#F31717"/>
</RelativeLayout>